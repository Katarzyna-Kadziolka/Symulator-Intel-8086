<controls:AdonisWindow x:Class="Intel8086.MainWindow"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="clr-namespace:Intel8086"
                       xmlns:controls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                       mc:Ignorable="d"
                       Title="Intel8086 Symulator" Height="450" Width="800">

    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}" />
    </Window.Style>

<StackPanel VerticalAlignment="Center">
    <Grid>
        <TextBlock FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Padding="0 10 0 0 ">Co chcesz zrobić?</TextBlock>
    </Grid>

    <Grid Margin="0 20 0 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <RadioButton HorizontalAlignment="Right" Padding="5 0 0 10" Grid.Row="0" Grid.Column="0"/>
        <RadioButton HorizontalAlignment="Right" Padding="5 0 0 10" Grid.Row="1" Grid.Column="0"/>
        <RadioButton HorizontalAlignment="Right" Padding="5 0 0 10" Grid.Row="2" Grid.Column="0"/>
        <TextBlock FontSize="15" Padding="5 0 0 5" Grid.Row="0" Grid.Column="1">operacje na rejestrach ogólnego przeznaczenia</TextBlock>
        <TextBlock FontSize="15" Padding="5 0 0 5" Grid.Row="1" Grid.Column="1">operacje na pamięci</TextBlock>
        <TextBlock FontSize="15" Padding="5 0 0 5" Grid.Row="2" Grid.Column="1">operacje ze stosem</TextBlock>
    </Grid>

    <Grid>
        <Button Name="OperationTypeButton" Click="OperationTypeButton_OnClick" Content="Dalej" Width="200" Margin="20" ></Button>
    </Grid>
</StackPanel>
</controls:AdonisWindow>
